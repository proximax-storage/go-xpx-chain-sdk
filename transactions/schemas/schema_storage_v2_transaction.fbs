}

table StoragePaymentTransactionBuffer {
    size: uint;
    signature: [ubyte];
    signer: [ubyte];
    version: uint;
    type: ushort;
    maxFee: [uint];
    deadline: [uint];
    driveKey: [ubyte];
    storageUnits: [uint];
}

table DownloadPaymentTransactionBuffer {
    size: uint;
    signature: [ubyte];
    signer: [ubyte];
    version: uint;
    type: ushort;
    maxFee: [uint];
    deadline: [uint];
    driveKey: [ubyte];
    downloadSize: [uint];
    feedbackFeeAmount: [uint];
}

table KeysBuffer {
    key: [ubyte];
}

table DownloadTransactionBuffer {
    size: uint;
    signature: [ubyte];
    signer: [ubyte];
    version: uint;
    type: ushort;
    maxFee: [uint];
    deadline: [uint];
    driveKey: [ubyte];
    downloadSize: [uint];
    feedbackFeeAmount: [uint];
    // It is ushort. But it can be zero, and we still want to represent it like 2 bytes
    listOfPublicKeysSize: [ubyte];
    listOfPublicKeys: [KeysBuffer];
}

table FinishDownloadTransactionBuffer {
    size: uint;
    signature: [ubyte];
    signer: [ubyte];
    version: uint;
    type: ushort;
    maxFee: [uint];
    deadline: [uint];
    downloadChannelId: [ubyte];
    feedbackFeeAmount: [uint];
}

table VerificationPaymentTransactionBuffer {
    size: uint;
    signature: [ubyte];
    signer: [ubyte];
    version: uint;
    type: ushort;
    maxFee: [uint];
    deadline: [uint];
    driveKey: [ubyte];
    verificationFeeAmount: [uint];
}

table DriveClosureTransactionBuffer {
    size: uint;
    signature: [ubyte];
    signer: [ubyte];
    version: uint;
    type: ushort;
    maxFee: [uint];
    deadline: [uint];
    driveKey: [ubyte];
}

table SignaturesBuffer {
    Signature: [ubyte];
}

table EndDriveVerificationTransactionV2Buffer {
    size: uint;
    signature: [ubyte];
    signer: [ubyte];
    version: uint;
    type: ushort;
    maxFee: [uint];
    deadline: [uint];
    driveKey: [ubyte];
    verificationTrigger: [ubyte];
    // It is ushort. But it can be zero, and we still want to represent it like 2 bytes
    shardId: [ubyte];
    keyCount: ubyte;
    judgingKeyCount: ubyte;
    keys: [KeysBuffer];
    signatures: [SignaturesBuffer];
    opinions: [ubyte];
}

table ReplicatorOffboardingTransactionBuffer {
    size: uint;
    signature: [ubyte];
    signer: [ubyte];
    version: uint;
    type: ushort;
    maxFee: [uint];
    deadline: [uint];
    driveKey: [ubyte];
}

