namespace transactions;

table MosaicProperty {
    mosaicPropertyId:ubyte;
    value:[uint];
}

table MosaicLevy {
    type: ushort;
    recipient: [ubyte];
    mosaicId:[uint];
    fee: [uint];
}

table MosaicDefinitionTransactionBuffer {
    size: uint;
    signature: [ubyte];
    signer: [ubyte];
    version: uint;
    type: ushort;
    maxFee: [uint];
    deadline:[uint];
    mosaicNonce:uint;
    mosaicId:[uint];
    levy:MosaicLevy;
    numOptionalProperties:ubyte;
    flags:ubyte;
    divisibility:ubyte;
    optionalProperties: [MosaicProperty];
}

root_type MosaicDefinitionTransactionBuffer;